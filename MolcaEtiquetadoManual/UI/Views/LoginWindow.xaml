<!-- UI/Views/LoginWindow.xaml -->
<Window x:Class="MolcaEtiquetadoManual.UI.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        
        mc:Ignorable="d"
        Title="Sistema de Etiquetado Manual - Login" 
        Height="450" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Encabezado -->
        <materialDesign:ColorZone Mode="PrimaryMid" Padding="16" Grid.Row="0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <materialDesign:PackIcon Kind="Barcode" Height="30" Width="30" VerticalAlignment="Center"/>
                <TextBlock Margin="8 0 0 0" VerticalAlignment="Center" FontSize="20">
                    Sistema de Etiquetado Manual
                </TextBlock>
            </StackPanel>
        </materialDesign:ColorZone>

        <!-- Formulario de Login -->
        <StackPanel Grid.Row="1" Width="280" VerticalAlignment="Center">
            <TextBlock Text="Iniciar Sesión" FontSize="24" HorizontalAlignment="Center" Margin="0 0 0 20"/>

            <TextBox x:Name="txtUsername"
                     materialDesign:HintAssist.Hint="Nombre de Usuario"
                     Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                     FontSize="16"
                     Margin="0 10 0 0"/>

            <PasswordBox x:Name="txtPassword"
                         materialDesign:HintAssist.Hint="Contraseña"
                         Style="{StaticResource MaterialDesignFloatingHintPasswordBox}"
                         FontSize="16"
                         Margin="0 10 0 0"/>

            <TextBlock x:Name="txtError" 
                       Foreground="Red" 
                       TextWrapping="Wrap"
                       Margin="0 10 0 0"/>

            <Button Content="INGRESAR"
                    x:Name="btnLogin"
                    Click="BtnLogin_Click"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Margin="0 20 0 0"
                    Height="40"/>
        </StackPanel>

        <!-- Pie de página -->
        <TextBlock Grid.Row="2" 
                   Text="© 2025 - Sistema de Etiquetado Manual v1.0" 
                   HorizontalAlignment="Center"
                   Margin="0 0 0 10"/>
    </Grid>
</Window>