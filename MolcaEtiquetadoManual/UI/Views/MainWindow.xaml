

<Window x:Class="MolcaEtiquetadoManual.UI.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:MolcaEtiquetadoManual.UI.Controls"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="Sistema de Etiquetado Manual" 
        Height="720" Width="1280"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource MaterialDesignBackground}"
        MinWidth="1024" MinHeight="600">

    <Window.Resources>
        <ResourceDictionary>
            <!-- Estilos para los cards de actividad del proceso -->
            <Style x:Key="ProcessStepCard" TargetType="Border">
                <Setter Property="Background" Value="White"/>
                <Setter Property="CornerRadius" Value="4"/>
                <Setter Property="Padding" Value="15"/>
                <Setter Property="Margin" Value="0,0,0,15"/>
                <Setter Property="Effect">
                    <Setter.Value>
                        <DropShadowEffect BlurRadius="5" ShadowDepth="1" Opacity="0.2"/>
                    </Setter.Value>
                </Setter>
            </Style>
            <Style x:Key="ProcessStepTitle" TargetType="TextBlock">
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Margin" Value="0,0,0,10"/>
            </Style>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Barra superior -->
        <materialDesign:ColorZone Mode="PrimaryMid" Padding="16" Grid.Row="0">
            <DockPanel LastChildFill="False">
                <!-- Lado izquierdo - Logo y título -->
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                    <materialDesign:PackIcon Kind="Barcode" Height="30" Width="30" VerticalAlignment="Center"/>
                    <TextBlock Margin="8 0 0 0" VerticalAlignment="Center" FontSize="20">
                Sistema de Etiquetado Manual
                    </TextBlock>
                </StackPanel>

                <!-- Lado derecho - Información de usuario y botones -->
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                    <!-- Información de usuario -->
                    <TextBlock x:Name="txtUsuarioActual" 
                     VerticalAlignment="Center" 
                     Margin="0 0 8 0"/>

                    <materialDesign:PackIcon Kind="Account" 
                                   Height="24" 
                                   Width="24" 
                                   VerticalAlignment="Center"/>

                    <!-- Botón de gestión de usuarios -->
                    <Button Style="{StaticResource MaterialDesignToolButton}"
                  x:Name="btnUsuarios"
                  ToolTip="Gestión de Usuarios"
                  Margin="8 0"
                  Click="BtnUsuarios_Click">
                        <materialDesign:PackIcon Kind="AccountGroup" Height="24" Width="24"/>
                    </Button>

                    <!-- Botón de configuración de impresora -->
                    <Button Style="{StaticResource MaterialDesignToolButton}"
                  x:Name="btnConfigImpresora"
                  ToolTip="Configuración de impresora"
                  Margin="8 0"
                  Click="BtnConfigImpresora_Click">
                        <materialDesign:PackIcon Kind="Printer" Height="24" Width="24"/>
                    </Button>

                    <!-- Botón de cerrar sesión -->
                    <Button Style="{StaticResource MaterialDesignRaisedButton}"
                  x:Name="btnCerrarSesion"
                  Click="BtnCerrarSesion_Click"
                  Margin="12 0 0 0"
                  Background="{DynamicResource PrimaryHueDarkBrush}"
                  Foreground="{DynamicResource PrimaryHueDarkForegroundBrush}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Cerrar sesión" Margin="0 0 4 0"/>
                            <materialDesign:PackIcon Kind="Logout"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </DockPanel>
        </materialDesign:ColorZone>

        <!-- Contenido principal -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="1.5*"/>
            </Grid.ColumnDefinitions>

            <!-- Panel izquierdo - Proceso principal -->
            <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto" Margin="0,0,15,0">
                <StackPanel>
                    <!-- Paso 1: Escaneo de DUN14 -->
                    <Border Style="{StaticResource ProcessStepCard}">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Numeric1CircleOutline" 
                                                        Width="24" Height="24" 
                                                        VerticalAlignment="Center"
                                                        Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                                <TextBlock Text="Escaneo de DUN14" 
                                         Style="{StaticResource ProcessStepTitle}"
                                         Margin="8,0,0,10"/>
                            </StackPanel>

                            <TextBlock Text="Escanee o ingrese el código DUN14 del producto para buscar en la base de datos:" 
                                     Margin="0,0,0,10"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBox Grid.Column="0"
                                       x:Name="txtDun14"
                                       materialDesign:HintAssist.Hint="Código DUN14"
                                       Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                       FontSize="16"
                                       KeyDown="TxtDun14_KeyDown"
                                       Margin="0,0,10,0"/>

                                <Button Grid.Column="1"
                                        Content="BUSCAR"
                                        x:Name="btnBuscar"
                                        Click="BtnBuscar_Click"
                                        Style="{StaticResource MaterialDesignRaisedButton}"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Paso 2: Información de la orden -->
                    <Border Style="{StaticResource ProcessStepCard}">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Numeric2CircleOutline" 
                                    Width="24" Height="24" 
                                    VerticalAlignment="Center"
                                    Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                                <TextBlock Text="Información de la Orden" 
                     Style="{StaticResource ProcessStepTitle}"
                     Margin="8,0,0,10"/>
                            </StackPanel>

                            <!-- Reorganizamos con un Grid que tenga dos columnas: Datos y Vista previa -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Panel izquierdo - Datos de la orden -->
                                <Grid Grid.Column="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- Detalles del producto -->
                                    <StackPanel Grid.Column="0" Grid.Row="0" Margin="0,0,10,15">
                                        <TextBlock Text="Número de Artículo" FontWeight="Medium"/>
                                        <TextBox x:Name="txtNumeroArticulo" 
                           IsReadOnly="True"
                           Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1" Grid.Row="0" Margin="0,0,0,15">
                                        <TextBlock Text="Descripción" FontWeight="Medium"/>
                                        <TextBox x:Name="txtDescripcion" 
                           IsReadOnly="True"
                           Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
                                    </StackPanel>

                                    <!-- Detalles de producción -->
                                    <StackPanel Grid.Column="0" Grid.Row="1" Margin="0,0,10,15">
                                        <TextBlock Text="Programa de Producción" FontWeight="Medium"/>
                                        <TextBox x:Name="txtProgramaProduccion" 
                           IsReadOnly="True"
                           Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1" Grid.Row="1" Margin="0,0,0,15">
                                        <TextBlock Text="Cantidad por Pallet" FontWeight="Medium"/>
                                        <TextBox x:Name="txtCantidadPallet" 
                           IsReadOnly="True"
                           Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
                                    </StackPanel>

                                    <!-- Fechas y lote -->
                                    <StackPanel Grid.Column="0" Grid.Row="2" Margin="0,0,10,0">
                                        <TextBlock Text="Turno / Lote" FontWeight="Medium"/>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBox x:Name="txtTurno" 
                               Grid.Column="0"
                               Width="40"
                               IsReadOnly="True"
                               Style="{StaticResource MaterialDesignOutlinedTextBox}"/>

                                            <TextBox x:Name="txtLote" 
                               Grid.Column="1"
                               Margin="5,0,0,0"
                               IsReadOnly="True"
                               Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
                                        </Grid>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1" Grid.Row="2" Margin="0,0,0,0">
                                        <TextBlock Text="Fechas" FontWeight="Medium"/>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBox x:Name="txtFechaProduccion" 
                               Grid.Column="0"
                               materialDesign:HintAssist.Hint="Producción"
                               IsReadOnly="True"
                               Margin="0,0,5,0"
                               Style="{StaticResource MaterialDesignOutlinedTextBox}"/>

                                            <TextBox x:Name="txtFechaCaducidad" 
                               Grid.Column="1"
                               materialDesign:HintAssist.Hint="Caducidad"
                               IsReadOnly="True"
                               Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
                                        </Grid>
                                    </StackPanel>
                                </Grid>

                                <!-- Panel derecho - Vista previa de etiqueta -->
                                <Border Grid.Column="1" 
                    Margin="15,0,0,0" 
                    BorderBrush="{DynamicResource MaterialDesignDivider}" 
                    BorderThickness="1" 
                    CornerRadius="4">
                                    <DockPanel>
                                        <TextBlock Text="Vista previa de etiqueta" 
                             FontWeight="Medium" 
                             DockPanel.Dock="Top" 
                             Padding="10,10,10,5"
                             Background="{DynamicResource MaterialDesignChipBackground}"/>

                                        <!-- Referencia al control de vista previa -->
                                        <local:EtiquetaPreviewControl x:Name="etiquetaPreview" 
                                                Width="280" 
                                                Height="300"
                                                Margin="5"/>
                                    </DockPanel>
                                </Border>
                            </Grid>

                            <!-- Botón de impresión - lo mantenemos abajo -->
                            <Button x:Name="btnImprimirEtiqueta"
                              Content="IMPRIMIR ETIQUETA"
                              Click="BtnImprimirEtiqueta_Click"
                              Style="{StaticResource MaterialDesignRaisedAccentButton}"
                              Margin="0,15,0,0"
                              HorizontalAlignment="Center"
                              IsEnabled="False"/>   
                        </StackPanel>
                    </Border>

                    <!-- Paso 3: Verificación de etiqueta -->
                    <Border Style="{StaticResource ProcessStepCard}">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Numeric3CircleOutline" 
                                                        Width="24" Height="24" 
                                                        VerticalAlignment="Center"
                                                        Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                                <TextBlock Text="Verificación de Etiqueta" 
                                         Style="{StaticResource ProcessStepTitle}"
                                         Margin="8,0,0,10"/>
                            </StackPanel>

                            <TextBlock Text="Escanee el código de barras de la etiqueta impresa para verificar:" 
                                     Margin="0,0,0,10"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBox Grid.Column="0"
                                       x:Name="txtCodigoVerificacion"
                                       materialDesign:HintAssist.Hint="Escanee el código de barras"
                                       Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                       FontSize="16"
                                       KeyDown="TxtCodigoVerificacion_KeyDown"
                                       IsEnabled="False"
                                       Margin="0,0,10,0"/>

                                <Button Grid.Column="1"
                                        Content="VERIFICAR Y GUARDAR"
                                        x:Name="btnVerificar"
                                        Click="BtnVerificar_Click"
                                        Style="{StaticResource MaterialDesignRaisedButton}"
                                        IsEnabled="False"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Panel de estado -->
                    <Border Background="{DynamicResource MaterialDesignChipBackground}" 
                          CornerRadius="4" 
                          Padding="15" 
                          Margin="0,10,0,0">
                        <StackPanel>
                            <TextBlock Text="Estado del proceso:" 
                                     FontWeight="Bold" 
                                     Margin="0,0,0,5"/>

                            <TextBlock x:Name="txtEstado" 
                                     TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>

            <!-- Panel derecho - Historial y preview -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Previsualización de etiqueta (opcional - para futuras versiones) -->
                <Border Grid.Row="0" 
                        Style="{StaticResource ProcessStepCard}"
                        Visibility="Collapsed">
                    <StackPanel>
                        <TextBlock Text="Previsualización de Etiqueta" 
                                 Style="{StaticResource ProcessStepTitle}"/>

                        <Border BorderBrush="{DynamicResource MaterialDesignDivider}" 
                              BorderThickness="1" 
                              Height="200" 
                              HorizontalAlignment="Center">
                            <Grid x:Name="previewContainer">
                                <!-- Aquí iría la vista previa de la etiqueta - para futuras versiones -->
                                <TextBlock Text="Vista previa no disponible"
                                         HorizontalAlignment="Center"
                                         VerticalAlignment="Center"
                                         Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                            </Grid>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Historial de Actividad -->
                <Border Grid.Row="1" 
                        Style="{StaticResource ProcessStepCard}">
                    <DockPanel>
                        <TextBlock Text="Historial de Actividad" 
                                 Style="{StaticResource ProcessStepTitle}"
                                 DockPanel.Dock="Top"/>

                        <ListView x:Name="lvActividad" 
                                ItemsSource="{Binding ActivityItems}"
                                BorderThickness="0">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Margin="0,5">
                                        <TextBlock Text="{Binding Description}" 
                                                 TextWrapping="Wrap"/>

                                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                            <TextBlock Text="{Binding Time}" 
                                                     Foreground="Gray" 
                                                     FontSize="11"/>

                                            <TextBlock Text=" - " 
                                                     Foreground="Gray" 
                                                     FontSize="11"/>

                                            <TextBlock Text="{Binding Level}" 
                                                     Foreground="{Binding Level, Converter={StaticResource LogLevelToColorConverter}}" 
                                                     FontSize="11"/>
                                        </StackPanel>

                                        <Separator Margin="0,8,0,0"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </DockPanel>
                </Border>
            </Grid>
        </Grid>

        <!-- Barra de estado -->
        <materialDesign:ColorZone Mode="Standard" Grid.Row="2" Padding="8">
            <DockPanel>
                <TextBlock Text="{Binding Source={x:Static sys:DateTime.Now}, StringFormat='{}{0:dd/MM/yyyy HH:mm:ss}'}" 
                           DockPanel.Dock="Right"/>

                <TextBlock x:Name="txtVersion" 
                           Text="Molino Cañuelas - Sistema de Etiquetado Manual v1.0" 
                           DockPanel.Dock="Left"/>
            </DockPanel>
        </materialDesign:ColorZone>
    </Grid>
</Window>