<?xml version="1.0" encoding="utf-8"?>
<UserControl x:Class="MolcaEtiquetadoManual.UI.Controls.Step3Control"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="500">

    <StackPanel Margin="10">
        <!-- Instrucciones -->
        <TextBlock Text="Escanee el código de barras de la etiqueta impresa para verificar:" 
                   TextWrapping="Wrap"
                   Margin="0,0,0,15"/>

        <!-- Información resumida de la etiqueta -->
        <Border Background="{DynamicResource MaterialDesignChipBackground}"
                BorderBrush="{DynamicResource MaterialDesignDivider}"
                BorderThickness="1"
                CornerRadius="4"
                Padding="10"
                Margin="0,0,0,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Primera fila -->
                <TextBlock Text="Pallet #:" 
                           Grid.Row="0" Grid.Column="0"
                           FontWeight="SemiBold"
                           Margin="0,0,10,0"/>

                <TextBlock x:Name="txtNumeroSecuencial" 
                           Grid.Row="0" Grid.Column="1"
                           Text="0000"/>

                <TextBlock Text="Lote:" 
                           Grid.Row="0" Grid.Column="2"
                           FontWeight="SemiBold"
                           Margin="10,0,10,0"/>

                <TextBlock x:Name="txtLote" 
                           Grid.Row="0" Grid.Column="3"
                           Text="0000000"/>

                <!-- Segunda fila -->
                <TextBlock Text="Artículo:" 
                           Grid.Row="1" Grid.Column="0"
                           FontWeight="SemiBold"
                           Margin="0,5,10,0"/>

                <TextBlock x:Name="txtArticulo" 
                           Grid.Row="1" Grid.Column="1"
                           Grid.ColumnSpan="3"
                           Text="000000"
                           Margin="0,5,0,0"/>
            </Grid>
        </Border>

        <!-- Campo de verificación -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBox Grid.Column="0"
                     x:Name="txtCodigoVerificacion"
                     materialDesign:HintAssist.Hint="Escanee el código de barras"
                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                     FontSize="20"
                     FontFamily="Consolas"
                     KeyDown="TxtCodigoVerificacion_KeyDown"
                     Margin="0,0,10,0"
                     IsEnabled="False"/>

            <Button Grid.Column="1"
                    Content="VERIFICAR"
                    x:Name="btnVerificar"
                    Click="BtnVerificar_Click"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    IsEnabled="False"/>
        </Grid>

        <!-- Mensajes y resultados -->
        <StackPanel Margin="0,15,0,0">
            <!-- Mensaje de error o confirmación -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Icono de confirmación -->
                <materialDesign:PackIcon Kind="CheckCircle" 
                                         Grid.Column="0"
                                         Foreground="Green"
                                         Width="24" Height="24"
                                         Margin="0,0,10,0"
                                         VerticalAlignment="Center"
                                         x:Name="iconSuccess"
                                         Visibility="Collapsed"/>

                <!-- Mensaje de error o éxito -->
                <TextBlock x:Name="txtError" 
                          Grid.Column="1"
                          Foreground="Red" 
                          TextWrapping="Wrap"/>
            </Grid>

            <!-- Barra de progreso -->
            <ProgressBar x:Name="progressBar"
                         Style="{StaticResource MaterialDesignLinearProgressBar}"
                         IsIndeterminate="True"
                         Margin="0,10,0,0"
                         Height="4"
                         Visibility="Collapsed"/>

            <!-- Botón Cancelar -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
                <Button Content="CANCELAR"
                        x:Name="btnCancelar"
                        Click="BtnCancelar_Click"
                        Style="{StaticResource MaterialDesignOutlinedButton}"/>
            </StackPanel>
        </StackPanel>
    </StackPanel>
</UserControl>