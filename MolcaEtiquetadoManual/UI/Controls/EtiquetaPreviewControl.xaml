<UserControl x:Class="MolcaEtiquetadoManual.UI.Controls.EtiquetaPreviewControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="280">

    <Grid Background="White">
        <Border BorderBrush="Black" BorderThickness="1" Margin="5" Background="White">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <!-- Fecha de vencimiento -->
                    <RowDefinition Height="Auto" />
                    <!-- Fecha y hora de declaración -->
                    <RowDefinition Height="Auto" />
                    <!-- Programa de producción y turno -->
                    <RowDefinition Height="Auto" />
                    <!-- Codigo DUN14 -->
                    <RowDefinition Height="Auto" />
                    <!-- Descripción del artículo -->
                    <RowDefinition Height="Auto" />
                    <!-- 2do número de ITEM -->
                    <RowDefinition Height="Auto" />
                    <!-- Cantidad por pallet -->
                    <RowDefinition Height="Auto" />
                    <!-- Código de barras horizontal -->
                </Grid.RowDefinitions>

                <!-- Fecha de vencimiento: DD MMM YY -->
                <TextBlock x:Name="txtFechaVencimiento" 
                           Grid.Row="0" 
                           Text="22 MAR 15" 
                           FontSize="18" 
                           FontWeight="Bold"
                           Margin="0,0,0,5"/>

                <!-- Fecha y hora de declaración: YYMMDD HH:MM -->
                <TextBlock x:Name="txtFechaHoraDeclaracion" 
                           Grid.Row="1" 
                           Text="140725 07:57" 
                           FontSize="16" 
                           Margin="0,0,0,5"/>

                <!-- Programa de producción y turno: XXXXXXX -->
                <TextBlock x:Name="txtProgramaYTurno" 
                           Grid.Row="2" 
                           Text="5142551" 
                           FontSize="16" 
                           Margin="0,0,0,5"/>

                <!-- Codigo DUN14 -->
                <TextBlock x:Name="txtDun14" 
                           Grid.Row="3" 
                           Text="17792180001525" 
                           FontSize="16" 
                           Margin="0,0,0,5"/>

                <!-- Descripción del artículo -->
                <TextBlock x:Name="txtDescripcion" 
                           Grid.Row="4" 
                           Text="HAR.000 CAD. PK 10X1KG" 
                           FontSize="14" 
                           TextWrapping="Wrap"
                           Margin="0,0,0,5"/>

                <!-- 2do número de ITEM (LITM) -->
                <TextBlock x:Name="txtNumeroArticulo" 
                           Grid.Row="5" 
                           Text="HCM0001" 
                           FontSize="16" 
                           FontWeight="Bold"
                           Margin="0,0,0,5"/>

                <!-- Cantidad por pallet -->
                <TextBlock x:Name="txtCantidadPallet" 
                           Grid.Row="6" 
                           Text="0008 Bultos" 
                           FontSize="14" 
                           Margin="0,0,0,10"/>

                <!-- Código de barras -->
                <Image x:Name="imgCodigoBarras" 
                       Grid.Row="7" 
                       Height="80" 
                       Stretch="Uniform"/>
            </Grid>
        </Border>

        <!-- Mensaje cuando no hay datos -->
        <TextBlock x:Name="txtNoPreview"
                   Text="Vista previa disponible al seleccionar una orden"
                   TextWrapping="Wrap"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Foreground="{DynamicResource MaterialDesignBodyLight}"/>
    </Grid>
</UserControl>