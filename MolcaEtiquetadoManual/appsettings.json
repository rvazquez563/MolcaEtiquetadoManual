{
    "ConnectionStrings": {
        "DefaultConnection": "Server=RJV;Database=DB_MOLCA;Trusted_Connection=True;"
    },
    "PrinterSettings": {
        "IpAddress": "192.168.1.100",
        "Port": 9100,
        "FormatName": "MOLCA.ZPL",
        "FormatUnit": "E",
        "LabelQuantity": 1,
        "UseMockPrinter": true,
        "ShowPrintDialog": true
    },
    "AppSettings": {
        "Company": "Molca",
        "ApplicationName": "Sistema de Etiquetado Manual",
        "Version": "1.0.0",
        "LineNumber": "1",
        "LineName": "LÃ­nea 1"
    },
    "KioskSettings": {
        "Enabled": true,
        "HideTaskbar": true,
        "DisableTaskManager": true,
        "BlockSystemKeys": true,
        "WatchdogEnabled": true,
        "WatchdogInterval": 500,
        "EmergencyExitEnabled": true,
        "EmergencyExitKeys": "Ctrl+Shift+Alt+F12"
    },
    "CodigoBarras": {
        "UsarCodigoDeControl": true,
        "PermitirVerificacionManual": true
    },
    "Serilog": {
        "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
        "MinimumLevel": {
            "Default": "Information",
            "Override": {
                "Microsoft": "Warning",
                "System": "Warning"
            }
        },
        "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
        "WriteTo": [
            { "Name": "Console" },
            {
                "Name": "File",
                "Args": {
                    "path": "%LOCALAPPDATA%\\MolcaEtiquetadoManual\\Logs\\etiquetado-.log",
                    "rollingInterval": "Day",
                    "retainedFileCountLimit": 31,
                    "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff} [{Level:u3}] {Message:lj} {NewLine}{Exception}"
                }
            }
        ]
    }
}